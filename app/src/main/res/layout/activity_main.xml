<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/btnDatePickerDialog"
        android:text="Date Picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        app:layout_constraintLeft_toRightOf="@id/btnDatePickerDialog"
        app:layout_constraintTop_toBottomOf="@id/btnDatePickerDialog"
        android:text="Time Picker"
        android:id="@+id/btnTimePickerDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        app:layout_constraintRight_toLeftOf="@id/btnTimePickerDialog"
        android:id="@+id/btnAlertDialog"
        android:layout_marginLeft="16dp"
        android:text="Alert Dialog"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/btnTimePickerDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>